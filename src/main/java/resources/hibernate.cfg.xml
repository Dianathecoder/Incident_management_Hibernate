<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>

        <!-- ConexiÃ³n TCP a MySQL (Docker) -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:mysql://db:3306/gestion_incidencias?serverTimezone=UTC
        </property>
        <property name="hibernate.connection.username">user</property>
        <property name="hibernate.connection.password">p@ssword</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.id.new_generator_mappings">true</property>

        <mapping class="com.miap.hibernate.gestion_incidencias.Empleados"/>
        <mapping class="com.miap.hibernate.gestion_incidencias.Incidencias"/>
         <!-- Mapeo de entidades -->
        <mapping class="POJOS.Employee"/>
        <mapping class="POJOS.Incident"/>
    </session-factory>
</hibernate-configuration>
